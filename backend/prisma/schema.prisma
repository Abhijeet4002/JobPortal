generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(uuid())
  fullname           String
  email              String   @unique
  phoneNumber        String
  password           String
  role               String
  bio                String?
  skills             String   @default("[]")
  resume             String?
  resumeOriginalName String?
  companyId          String?
  profilePhoto       String   @default("")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  company        Company?      @relation("UserProfileCompany", fields: [companyId], references: [id])
  ownedCompanies Company[]     @relation("CompanyOwner")
  createdJobs    Job[]         @relation("JobCreator")
  applications   Application[] @relation("Applicant")
}

model Company {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  website     String?
  location    String?
  logo        String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User   @relation("CompanyOwner", fields: [userId], references: [id])
  jobs      Job[]
  employees User[] @relation("UserProfileCompany")
}

model Job {
  id              String   @id @default(uuid())
  title           String
  description     String
  requirements    String   @default("[]")
  salary          Int
  experienceLevel Int
  location        String
  jobType         String
  position        Int
  companyId       String
  createdById     String
  closed          Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  company      Company       @relation(fields: [companyId], references: [id])
  createdBy    User          @relation("JobCreator", fields: [createdById], references: [id])
  applications Application[]
}

model Application {
  id                 String   @id @default(uuid())
  jobId              String
  applicantId        String
  status             String   @default("pending")
  resumeUrl          String?
  resumeOriginalName String?
  resumeLink         String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  job       Job  @relation(fields: [jobId], references: [id])
  applicant User @relation("Applicant", fields: [applicantId], references: [id])
}
